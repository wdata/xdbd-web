{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "checkJs": false,
    "paths": {
      "src-root/*": ["*"],
      "services/*": ["shared/services/*"],
      "browser-services/*": ["browser/services/*"],
      "shared/*": ["shared/*"],
      "browser-components/*": ["browser/components/*"],
      "browser/*": ["browser/*"],
      "browser-styles/*": ["browser/styles/*"]
    }
  }
}
